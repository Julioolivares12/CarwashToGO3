<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoPromocionList"
            android:layout_width="182dp"
            android:layout_height="158dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/imagen_para_empresas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tvTituloPromo"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="#A5002A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCreado"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloPromo" />

        <TextView
            android:id="@+id/tvFechaI"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="12dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toBottomOf="@+id/tvCreado" />

        <TextView
            android:id="@+id/tvFechaF"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaI" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaF" />

        <TextView
            android:id="@+id/tvEditar"
            android:layout_width="156dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:text="Editar Promocion"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.341"
            app:layout_constraintStart_toEndOf="@+id/logoPromocionList"
            app:layout_constraintTop_toBottomOf="@+id/tvPrecio" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>